// global styles

body
  background-color bg-color
  text-align left
  color blk-color

h1
  font 8.3rem/8.3rem sans-font
  text-transform uppercase
  letter-spacing 2px
  color white
  text-shadow 8px 8px 0 #000, -4px -4px 0 #000,  4px -4px 0 #000, -4px 4px 0 #000, 4px 4px 0 #000
h2
  font 400 2.8rem/2.8rem body-font
  padding-bottom 20px
  color black
h3
  padding-top 40px
  padding-bottom 40px
  font 900 1.75rem/1.75rem sans-font
  text-transform uppercase
  letter-spacing 2px
  color white
h4
  font 400 1.5rem/1.5rem body-font
  padding-bottom 20px
  color white
p, ul
  font 400 1.125rem/1.4rem body-font    
a
  text-decoration none
  display inline-block
  color accent-yellow
  padding-bottom 2px
  border-bottom 1px dashed accent-yellow

form
  margin-top 20px
  margin-bottom 20px

.module
  padding 0 10%

.bg-dark
  background-color dark-accent
.bg-light
  background-color light-accent
.bg-dark-grey
  background-color dark-grey
  color white
.bg-white
  background-color white
  h3
    color dark-accent    
.bg-gradient
  background -webkit-linear-gradient(left, dark-accent, dark-accent 40%, white 41%)
.bg-pattern
  background-image url('../img/emojisalad-pattern-again.png')
  background-size 200px 170px
  background-repeat repeat
.bg-dotted
  background-image radial-gradient(dark-accent 15%, transparent 16%), radial-gradient(dark-accent 15%, transparent 16%)
  background-size 20px 20px
  background-position 0 0, 10px 10px

.box-white
  background-color white
  border 4px solid blk-color
  border-radius 3px
  -webkit-appearance none
  appearance none
.box-yellow
  background-color accent-yellow
  border 4px solid blk-color
  border-radius 3px
  -webkit-appearance none
  appearance none
  
.box
  position relative
.card
  position relative
  z-index 2
  display flex
  align-items center
  justify-content center
.card:nth-child(2)
  z-index 1

.masthead
  height 440px
  display flex
.title
  flex 1
  margin-right 5%
  h1
    -ms-transform rotate(-7deg) /* IE 9 */
    -webkit-transform rotate(-7deg) /* Chrome, Safari, Opera */
    transform rotate(-7deg)
    margin-left -15px
  h2
    margin-top 100px
  .box
    -ms-transform rotate(3deg) /* IE 9 */
    -webkit-transform rotate(3deg) /* Chrome, Safari, Opera */
    transform rotate(3deg)
    top 50px
    left 150px
    .card
      width 250px
      height 100px
      line-height 200px
      p
        max-width 80%
    .card:nth-child(2)
      top -94px
      left 15px
  
.cta
  height 296px
  display flex  
.explainer
  flex 1.8
  & > *
    width 90%
.bg-arrow
  flex 0.2
  width 0
  height 0
  border-top 148px solid transparent
  border-bottom 148px solid transparent
  border-left 80px solid dark-accent
.signup
  flex 1
  position relative
  transition-duration: duration
  margin-left -30px
  
.footer
  height 300px
  display flex
.siblings
  flex 2
  margin-right 20%
.submit-clues
  flex 1.25

input[type='text']
  display inline-block
  width 230px
  padding 10px 0 13px 0
  font 400 1.75rem/1.75rem body-font
  text-align center
  &:focus
    border-color dark-accent

input[type='submit']
  display inline-block
  padding 15px 10px 17px 10px
  font 400 1.125rem/1.125rem sans-font
  text-align center
  text-transform uppercase
  &:focus
    border-color dark-accent


.demo
  flex 2
  width 400px
  transition-duration duration
  
border-size = 4px
message-width = 200px
message-height = 100px
offset = 15px

.messages
  width 500px
  overflow hidden
  height 112%
  position relative

.message
  position: absolute
  width: message-width + (border-size * 2) + offset
  top 110%
  clear both
  margin-bottom 60px
  transition-duration duration; 

  &.left
    float: left

  &.right
    float: right
    right 0

  p
    padding: 20px;

  .card
    border 4px solid black
    position relative
    width: message-width 
    height: message-height

  .bg-white
    z-index 2

  .bg-yellow 
    background accent-yellow
    top: offset;
    left: offset 
    z-index 1
    position absolute

  .arrow
    position absolute
    border: 25px solid;
    border-color: black transparent transparent black;
    width: 0;
    height: 0;
    bottom -(50 + (border-size))px
    left 0
    z-index 2
    
  .inner-arrow
    border: 18px solid;
    border-color: white transparent transparent white;
    top -(25 - border-size)px
    left -(25 - border-size)px
    z-index 3

  .bg-arrow
    border-color: white transparent transparent white;
    left: -21px;
    top: -35px;

  .main-arrow
    left: 20px

  &.right
    .arrow
      left auto
      position absolute
      border-color: black black transparent transparent ;
      right 0
      
    .inner-arrow
      border-color: white white transparent transparent;
      right -(25 - border-size)px

    .bg-arrow
      border-color: white white transparent transparent;
      right: -21px;

    .main-arrow
      left auto
      right: 20px

.bg-white
  .bg-arrow, .inner-arrow
    border-color: white transparent transparent white;

.bg-yellow
  .bg-arrow, .inner-arrow
    border-color: accent-yellow transparent transparent accent-yellow;

.right
  .bg-yellow
    .bg-arrow, .inner-arrow
      border-color: accent-yellow accent-yellow transparent transparent;
