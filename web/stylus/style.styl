.bg-arrow
  flex 0.2
  width 0
  height 0
  border-top 148px solid transparent
  border-bottom 148px solid transparent
  border-left 80px solid dark-accent
.signup
  padding-left 10%
  padding-right 10%
  flex 1
  position relative
  transition-duration: duration
.footer
  display flex
.siblings
  flex 2
  margin-right 20%
.submit-clues
  flex 1.25

input[type='tel']
  display inline-block
  width 230px
  padding 10px 0 13px 0
  font 400 1.75rem/1.75rem body-font
  text-align center
  transition all 0.5s ease-out
  &:focus
    border-color dark-accent
    transition all 0.5s ease-out

input[type='submit']
  display inline-block
  padding 15px 10px 17px 10px
  font 400 1.125rem/1.125rem sans-font
  text-align center
  text-transform uppercase
  transition all 0.2s ease-out
  &:focus
    border-color dark-accent
    transition all 0.2s ease-out
  &:hover
    background-color (accent-yellow*1.5)
    transition all 0.2s ease-out
    cursor pointer


.demo
  flex 2
  width 400px
  transition-duration duration
  
border-size = 4px
message-width = 200px
message-height = 100px
offset = 15px

.messages
  width 500px
  overflow hidden
  height 112%
  position relative

.message
  position: absolute
  width: message-width + (border-size * 2) + offset
  top 110%
  clear both
  margin-bottom 60px
  transition-duration duration; 

  &.left
    float: left

  &.right
    float: right
    right 0

  p
    padding: 20px;

  .card
    border 4px solid black
    position relative
    width: message-width 
    height: message-height

  .bg-white
    z-index 2

  .bg-yellow 
    background accent-yellow
    top: offset;
    left: offset 
    z-index 1
    position absolute

  .arrow
    position absolute
    border: 25px solid;
    border-color: black transparent transparent black;
    width: 0;
    height: 0;
    bottom -(50 + (border-size))px
    left 0
    z-index 2
    
  .inner-arrow
    border: 18px solid;
    border-color: white transparent transparent white;
    top -(25 - border-size)px
    left -(25 - border-size)px
    z-index 3

  .bg-arrow
    border-color: white transparent transparent white;
    left: -21px;
    top: -35px;

  .main-arrow
    left: 20px

  &.right
    .arrow
      left auto
      position absolute
      border-color: black black transparent transparent ;
      right 0
      
    .inner-arrow
      border-color: white white transparent transparent;
      right -(25 - border-size)px

    .bg-arrow
      border-color: white white transparent transparent;
      right: -21px;

    .main-arrow
      left auto
      right: 20px

.bg-white
  .bg-arrow, .inner-arrow
    border-color: white transparent transparent white;

.bg-yellow
  .bg-arrow, .inner-arrow
    border-color: accent-yellow transparent transparent accent-yellow;

.right
  .bg-yellow
    .bg-arrow, .inner-arrow
      border-color: accent-yellow accent-yellow transparent transparent;

   
