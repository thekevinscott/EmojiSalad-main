.dashboard {
  .row {
    display: flex;
  }
}

.box {
  background: #CCC;
  border-radius: 5px;
  padding: 20px;
  flex: 1;
  min-height: 120px;
  text-align: center;
  margin: 0 20px 20px 0;

  display: flex;
  flex-direction: column;
  align-items: center;

  h2 {
    margin-top: 20px;
    font-size: 48px;
  }

  &:last-child {
    margin-right: 0;
  }
}
