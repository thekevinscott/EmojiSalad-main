lesscss-percentage(n)
  (n * 100)%
  
@import "https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css"
body, html, .admin
  height 100%
.admin
  display flex
  flex-direction column
body
  background #EEE
  font-family sans-serif
a
  text-decoration underline
  cursor pointer
.page
  flex 1
  padding 20px
table
  border-collapse collapse
  width 100%
  td
    border 1px solid #CCC
    padding 10px
    vertical-align top
    &.full
      padding 0
    textarea
      width 100%
      height 100%
      font-size 12px
      min-height 80px
      padding 0
      border none
