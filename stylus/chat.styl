.chat
  background core-light
  font 1em/1.2em "Helvetica Neue" !important
  text-align left
  overflow hidden
  .bubble
    max-width 220px
    margin-bottom 20px
  .clear
    clear both
  .from-me
    position relative
    padding 10px 20px
    color white
    background chat-bubble-color1
    border-radius 25px
    float right
    &:before
      content ""
      position absolute
      z-index 1
      bottom -2px
      right -7px
      height 20px
      border-right 20px solid chat-bubble-color1
      border-bottom-left-radius 16px 14px
      -webkit-transform translate(0, -2px)
    &:after
      content ""
      position absolute
      z-index 1
      bottom -2px
      right -56px
      width 26px
      height 20px
      background core-light
      border-bottom-left-radius 10px
      -webkit-transform translate(-30px, -2px)
  .from-them
    position relative
    padding 10px 20px
    background chat-bubble-color2
    border-radius 25px
    color black
    float left
    &:before
      content ""
      position absolute
      z-index 2
      bottom -2px
      left -7px
      height 20px
      border-left 20px solid chat-bubble-color2
      border-bottom-right-radius 16px 14px
      -webkit-transform translate(0, -2px)
    &:after
      content ""
      position absolute
      z-index 3
      bottom -2px
      left 4px
      width 26px
      height 20px
      background core-light
      border-bottom-right-radius 10px
      -webkit-transform translate(-30px, -2px)
.delay
  animation-delay(2s)

.delay2
  animation-delay(4s)
  
@media (max-width: 480px)
  .header
    .chat
      // background core-color
      overflow visible
      .from-me
        &:after
          // background core-color
      .from-them
        &:after
          // background core-color
 

