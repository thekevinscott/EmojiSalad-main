@import 'flex'
@import url('http://fonts.googleapis.com/css?family=Work+Sans:400,100,600');
@import url('http://fonts.googleapis.com/css?family=Alegreya:400,700|Alegreya+Sans|Poppins');

fundimental = #5ccdff
cta = #D6E3F8
callout = lighten(fundimental, 5)
// sans = 'Work Sans', sans-serif;
sans = 'Poppins', sans-serif;
submit-button-height = 40px

html, body
	background-color fundimental
	color white
	font-family sans
	font-weight 700 
h1, h2
	font-weight 700
	margin 15px
	
button:focus
	outline 0
		
.container
	// display -webkit-box
	flex()
	align(center)
	justify-content(center)
	flex-direction(column)
	width 100%
	.venn
		flex()
		align(center)
		justify-content(center)
		flex-direction(row)
		.rounded
			opacity 0.4
			border-radius (160px/2)
			max-width 50%
			&.left
				opacity 1
				margin-right -20px
			&.right
				opacity 1
				margin-left -20px
				padding-left -20px
	.wtf
		background-color lighten(fundimental, 5)
		-webkit-appearence none
		border none
		margin-bottom 24px
	.phone-input
		// padding 15px
		background-color callout
		width 100%
		flex()
		align(center)
		justify-content(center)
		flex-direction(column)
		color lighten(fundimental, 50)
		label
			padding-top 10px
		label, input
			display block
			padding-bottom 5px
		input
			color black
		.submit
			color darken(fundimental,30)
			font-size 24px
			font-weight 400
			background-color white
			-webkit-appearence none
			border none
			margin-top 10px